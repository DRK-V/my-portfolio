<section class="min-h-screen flex items-center justify-center relative overflow-hidden bg-background transition-colors duration-300">
  <!-- Background Pattern -->
  <div class="absolute inset-0 bg-grid opacity-20"></div>
  
  <!-- Floating Elements -->
  <div class="absolute top-20 left-20 w-20 h-20 bg-cyan-500/20 rounded-full blur-xl animate-float"></div>
  <div class="absolute bottom-20 right-20 w-32 h-32 bg-purple-500/20 rounded-full blur-xl animate-float" style="animation-delay: -2s;"></div>
  <div class="absolute top-1/2 left-10 w-16 h-16 bg-blue-500/20 rounded-full blur-xl animate-float" style="animation-delay: -4s;"></div>
  
  <div class="max-w-7xl mx-auto px-4 py-20 text-center relative z-10">
    <div class="animate-fade-in-up">
      <h1 class="text-6xl md:text-8xl font-bold mb-6 gradient-text leading-tight">
        Daniel Arango
      </h1>
      <div class="text-2xl md:text-3xl text-muted-foreground mb-4 font-mono">
        <span class="text-cyan-400">&lt;</span>
        <span class="typing-animation">Desarrollador Full Stack</span>
        <span class="text-cyan-400">/&gt;</span>
      </div>
      <p class="text-xl text-muted-foreground mb-12 max-w-3xl mx-auto leading-relaxed">
         Ingeniero de Sistemas con 
